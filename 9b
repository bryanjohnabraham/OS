#include <stdio.h>

struct Process {
    int at, bt, rt, wt;
};

int main() {

    int n, time = 0, completed = 0;
    float avg_wt = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];

    for(int i = 0; i < n; i++) {

        printf("\nProcess %d\n", i+1);

        printf("Arrival Time: ");
        scanf("%d", &p[i].at);

        printf("Burst Time: ");
        scanf("%d", &p[i].bt);

        p[i].rt = p[i].bt;
    }

    while(completed < n) {

        int idx = -1;
        int min = 9999;

        for(int i = 0; i < n; i++) {

            if(p[i].at <= time && p[i].rt > 0 && p[i].rt < min) {
                min = p[i].rt;
                idx = i;
            }
        }

        if(idx == -1) {
            time++;
            continue;
        }

        p[idx].rt--;
        time++;

        if(p[idx].rt == 0) {

            completed++;

            int finish = time;

            p[idx].wt = finish - p[idx].bt - p[idx].at;

            avg_wt += p[idx].wt;
        }
    }

    printf("\nSRTF Average Waiting Time = %.2f\n", avg_wt/n);

    return 0;
}