#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>
#include <unistd.h>

sem_t mutex_1, mutex_2, r_sem, w_sem, order_sem;
int read_count = 0, write_count = 0;

void* reader(void* arg) {
    int id = *(int*)arg;

    // Entry Section
    sem_wait(&order_sem);      // Check if a writer is waiting
    sem_wait(&r_sem);          // Readers queue here
    sem_wait(&mutex_1);        // Protect read_count
    read_count++;
    if (read_count == 1) {
        sem_wait(&w_sem);      // First reader locks the resource from writers
    }
    sem_post(&mutex_1);
    sem_post(&r_sem);
    sem_post(&order_sem);

    // Reading Section
    printf("Reader %d is reading...\n", id);
    sleep(1); 

    // Exit Section
    sem_wait(&mutex_1);
    read_count--;
    if (read_count == 0) {
        sem_post(&w_sem);      // Last reader releases the resource
    }
    sem_post(&mutex_1);

    return NULL;
}

void* writer(void* arg) {
    int id = *(int*)arg;

    // Entry Section
    sem_wait(&mutex_2);        // Protect write_count
    write_count++;
    if (write_count == 1) {
        sem_wait(&r_sem);      // First writer blocks new readers
    }
    sem_post(&mutex_2);

    sem_wait(&w_sem);          // Request exclusive access to resource

    // Writing Section
    printf("Writer %d is writing...\n", id);
    sleep(1);

    // Exit Section
    sem_post(&w_sem);          // Release resource

    sem_wait(&mutex_2);
    write_count--;
    if (write_count == 0) {
        sem_post(&r_sem);      // Last writer allows readers again
    }
    sem_post(&mutex_2);

    return NULL;
}

int main() {
    pthread_t r[5], w[2];
    int ids[5] = {1, 2, 3, 4, 5};

    sem_init(&mutex_1, 0, 1);
    sem_init(&mutex_2, 0, 1);
    sem_init(&r_sem, 0, 1);
    sem_init(&w_sem, 0, 1);
    sem_init(&order_sem, 0, 1);

    // Creating threads (example: 2 writers, 5 readers)
    for(int i = 0; i < 2; i++) pthread_create(&w[i], NULL, writer, &ids[i]);
    for(int i = 0; i < 5; i++) pthread_create(&r[i], NULL, reader, &ids[i]);

    for(int i = 0; i < 2; i++) pthread_join(w[i], NULL);
    for(int i = 0; i < 5; i++) pthread_join(r[i], NULL);

    return 0;
}