#include <stdio.h>

struct Process {
    int at, bt, pr, wt;
};

int main() {

    int n, time = 0, completed = 0;
    float avg_wt = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];
    int done[n];

    for(int i = 0; i < n; i++)
        done[i] = 0;

    for(int i = 0; i < n; i++) {

        printf("\nProcess %d\n", i+1);

        printf("Arrival Time: ");
        scanf("%d", &p[i].at);

        printf("Burst Time: ");
        scanf("%d", &p[i].bt);

        printf("Priority: ");
        scanf("%d", &p[i].pr);
    }

    while(completed < n) {

        int idx = -1;
        int maxp = -1;

        for(int i = 0; i < n; i++) {

            if(p[i].at <= time && !done[i] && p[i].pr > maxp) {

                maxp = p[i].pr;
                idx = i;
            }
        }

        if(idx == -1) {
            time++;
            continue;
        }

        p[idx].wt = time - p[idx].at;
        time += p[idx].bt;

        done[idx] = 1;
        completed++;

        avg_wt += p[idx].wt;
    }

    printf("\nPriority Average Waiting Time = %.2f\n", avg_wt/n);

    return 0;
}