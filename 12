#include <stdio.h>

int main()
{
    int n, m, i, j, k;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter number of resources: ");
    scanf("%d", &m);

    int alloc[n][m], req[n][m];
    int avail[m];
    int finish[n];

    // Allocation Matrix
    printf("\nEnter Allocation Matrix:\n");
    for(i=0;i<n;i++)
        for(j=0;j<m;j++)
            scanf("%d",&alloc[i][j]);

    // Request Matrix
    printf("\nEnter Request Matrix:\n");
    for(i=0;i<n;i++)
        for(j=0;j<m;j++)
            scanf("%d",&req[i][j]);

    // Available Resources
    printf("\nEnter Available Resources:\n");
    for(i=0;i<m;i++)
        scanf("%d",&avail[i]);

    // Initialize finish array
    for(i=0;i<n;i++)
        finish[i] = 0;

    int count = 0;

    while(count < n)
    {
        int found = 0;

        for(i=0;i<n;i++)
        {
            if(finish[i] == 0)
            {
                int flag = 1;

                for(j=0;j<m;j++)
                {
                    if(req[i][j] > avail[j])
                    {
                        flag = 0;
                        break;
                    }
                }

                if(flag == 1)
                {
                    for(k=0;k<m;k++)
                        avail[k] += alloc[i][k];

                    finish[i] = 1;
                    found = 1;
                    count++;
                }
            }
        }

        if(found == 0)
            break;
    }

    int deadlock = 0;

    for(i=0;i<n;i++)
    {
        if(finish[i] == 0)
        {
            deadlock = 1;
            printf("Process P%d is deadlocked\n", i);
        }
    }

    if(deadlock == 0)
        printf("\nSystem is NOT Deadlocked\n");

    return 0;
}