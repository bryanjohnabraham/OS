#include <stdio.h>

#define Q 3
#define MAX 20

struct Process {
    int at, bt, rt, wt;
};

int main() {

    int n, time = 0, completed = 0;
    float avg_wt = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];

    for(int i = 0; i < n; i++) {

        printf("\nProcess %d\n", i+1);

        printf("Arrival Time: ");
        scanf("%d", &p[i].at);

        printf("Burst Time: ");
        scanf("%d", &p[i].bt);

        p[i].rt = p[i].bt;
    }

    int queue[100];
    int front = 0, rear = 0;

    int visited[MAX] = {0};

    queue[rear++] = 0;
    visited[0] = 1;

    while(completed < n) {

        int i = queue[front++];

        if(p[i].rt > Q) {

            p[i].rt -= Q;
            time += Q;

        } else {

            time += p[i].rt;
            p[i].rt = 0;

            completed++;

            p[i].wt = time - p[i].bt - p[i].at;

            avg_wt += p[i].wt;
        }

        for(int j = 0; j < n; j++) {

            if(!visited[j] && p[j].at <= time) {

                queue[rear++] = j;
                visited[j] = 1;
            }
        }

        if(p[i].rt > 0)
            queue[rear++] = i;

        if(front == rear)
            time++;
    }

    printf("\nRound Robin Average Waiting Time = %.2f\n", avg_wt/n);

    return 0;
}